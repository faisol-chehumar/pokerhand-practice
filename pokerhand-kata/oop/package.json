{
  "scripts": {
    "start": "backpack",
    "build": "backpack build",
    "test": "jest"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "awesome-typescript-loader": "^5.2.1",
    "backpack-core": "^0.8.4",
    "eslint": "^6.4.0",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "jest": "^24.9.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "express": "^4.17.3"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/utils/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
